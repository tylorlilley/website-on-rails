<% provide(:title, "All Games") %>

<section class="game title">
  <%= tag.h1 "All Games" %>
  <hr />
</section>
<section class="game content">
  <ul>
    <% @games.each_with_index do |game, index| %>
      <%= render partial: 'teaser', locals: { game: game, index: index } %>
      <br />
    <% end %>
  </ul>
</section>
