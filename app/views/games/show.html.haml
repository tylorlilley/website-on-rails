- provide(:title, @game.name)
%section.game.title
  = tag.h1 @game.name
  = tag.h2 "#{formated_date_for(@game)}", style: "margin-top:-6px"
.row
  .col-12.mx-auto
    %section.game.content
      = render partial:'screenshot', locals: { num: 1, size: 1, caption: formated_tagline_for(@game) }
      = sanitize formated_description_for(@game)
  .col-12.mx-auto
    .container
      .row.justify-content-center
        .col-12.col-xl-auto.mx-auto
          = render partial: 'screenshot', locals: { num: 2, size: 0.5, classes: "mx-auto" }
        .col-12.col-xl-auto.mx-auto
          = render partial: 'screenshot', locals: { num: 3, size: 0.5, classes: "mx-auto" }
        .col-12.col-xl-auto.mx-auto
          = render partial: 'screenshot', locals: { num: 4, size: 0.5, classes: "mx-auto" }
  .col-12.mx-auto
    %br
    %section.game.rider
      = tag.h2 link_to "Download #{@game.name} Now", download_filename_for(@game), target: "_blank"
