<% provide(:title, "All Updates") %>

<section class="post title">
  <%= tag.h1 "All Updates" %>
  <hr />
</section>
<section class="post content">
  <ul>
    <% @posts.each do |post| %>

      <div class="container">
        <div class="row">
          <div class="col-xs-12">
              <h3>
                <%= link_to post.title, post %>
              </h3>
              <h2 style="margin-top: -24px">
                <%= formated_date_for(post) %>
              </h2>
                <div class="post description">
                  <%== formated_intro_for(post) %>
                </div>
              <br />
          </div>
        </div>
      </div>

    <% end %>
  </ul>
</section>
